# Database Configuration
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress_password
DB_ROOT_PASSWORD=root_password

# WordPress Configuration
WP_PORT=80
WP_DEBUG=1

# phpMyAdmin Configuration
PMA_PORT=8080

# User permissions (will be auto-replaced by setup script)
# Find these with: id -u and id -g
UID=1000
GID=1000

# Node.js settings
NODE_ENV=development

# Domain configuration
DOMAIN=localhost

# Environment flag (development/staging/production)
ENVIRONMENT=development

# Theme Configuration
THEME_NAME="Steampunk Theme"
THEME_DESCRIPTION="A steampunk inspired WordPress theme with vintage industrial aesthetics."
THEME_PRIMARY_COLOR="#B87333"       # Copper tone
THEME_SECONDARY_COLOR="#5C4033"     # Dark brown
THEME_TERTIARY_COLOR="#FFD700"      # Gold
THEME_PRIMARY_FONT="Special Elite, cursive"
THEME_SECONDARY_FONT="Arbutus Slab, serif"
THEME_TERTIARY_FONT="Cinzel, serif" # Third steampunk font
THEME_AUTHOR="Your Name"
THEME_AUTHOR_URI="https://example.com"
THEME_REPO_URL="https://example.com/steampunk-theme"

# Path Configuration - Modify these based on your system
THEMES_PATH=./themes